<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:elevation="0dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="@color/LightGoldenrod3"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:id="@+id/rcv_image_search"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rcv_title_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toStartOf="@id/rcv_image_search"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:paddingTop="5dp"
            android:id="@+id/rcv_content_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/rcv_title_search"
            android:layout_toStartOf="@id/rcv_image_search"
            android:textSize="10sp"
            android:textStyle="normal" />
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>